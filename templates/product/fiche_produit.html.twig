{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}


    <h1 class = "fiche_title">Produit</h1>
<div class="fiche mb-3">

    <div class="fiche-left col-xl-6 col-md-6 col-sm-12">
    <h3 class="card-header">{{ product.name }}</h3>
    <p class="card-title">{{ product.description }}</p>
        <div class="card-footer text-muted">
            {{ product.price }} euros
        </div>
    </div>

    <div class="fiche-right col-xl-6 col-md-6 col-sm-12">
        <img class="img-product" src="{{ asset('build/images/' ~ product.image1) }}" alt="Le complément alimentaire du futur">

    </div>
    <form action="{{ path('add_to_cart', {id: product.id, redirect_to: app.request.uri}) }}" method="POST" class="add-to-cart-form">
        <div class="form-group mb-2">
            <label for="quantity">Quantité:</label>
            <input type="number" id="quantity" name="quantity" class="form-control" min="1" value="1" required style="width: 100px; display: inline-block; margin-right: 10px;">
        </div>
        <button type="submit" class="btn btn-primary">Ajouter au panier</button>
    </form>
</div>
    
{% endblock %}
