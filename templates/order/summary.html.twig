{% extends 'base.html.twig' %}


{% block body %}


    <div class="container my-5">

        <h1>Récapitulatif de ma commande</h1>


        <div class="row">


            <div class="col-md-8">


                <div class="bg-light p-3">

                    <strong>Contenu de mon panier</strong><br/>

                    {% for product in cart %}

                        <div class="row mt-2">

                            <div class="col-md-2">

                                <img src="{{ asset('build/images/boutique/' ~ product.object.image1) }}" class="img-fluid" alt="{{ product.object.name }}">

                            </div>

                            <div class="col-md-6">

                                <strong>{{ product.object.name }}</strong>

                                <span class="d-block small">Prix unitaire : {{ product.object.price }}</span>

                            </div>

                            <div class="col-md-2 text-right">

                                <span class="badge text-bg-secondary">x{{ product.qty }}</span>

                            </div>

                            <div class="col-md-2">

                                <strong>{{ (product.qty * product.object.price) }}</strong>

                            </div>

                        </div>

                    {% endfor %}

                </div>


                <div class="bg-light p-3 my-3">

                    <strong>Votre adresse de livraison :</strong><br/>

                    {{ choices.addresses.firstname }} {{ choices.addresses.lastname }}<br/>

                    {{ choices.addresses.address }}<br/>

                    {{ choices.addresses.city }} - {{ choices.addresses.country }}

                </div>

            </div>


            <div class="col-md-4">

                <div class="bg-light p-3">

                    <div class="d-flex justify-content-between">

                        <span class="fw-bold">Total produit</span>

                        <span>{{ totalQuantity }}</span>

                    </div>

                    <div class="d-flex justify-content-between mt-3">

                        <p class="cart-total">Sous-total <span>{{ totalPrice }} €</span></p>

                        <p class="shipping-info">Livraison standard <span>4,49 €</span></p>

                        <p class="cart-final-total">Total <span>{{ totalPrice + 4.49 }} €</span></p>

                    </div>

                    <div>

                        <a href="{{ path('app_payment', { 'id_order' : order.id }) }}" class="btn btn-success w-100 mt-3">Payer</a>

                    </div>

                </div>

            </div>


        </div>


    </div>


{% endblock %}