{% extends 'base.html.twig' %}


{% block body %}


    <div class="container">

        <h1>Espace membre</h1>


        <div class="row">

            <div class="col">

                {% include 'account/_menu.html.twig' %}

            </div>

            <div class="col">

                <h5>Mes adresses</h5>


                {{ form_start(addressForm) }}

                    <div class="row">

                        <div class="col">{{ form_row(addressForm.firstname) }}</div>

                        <div class="col">{{ form_row(addressForm.lastname) }}</div>

                        <div class="col">{{ form_row(addressForm.address) }}</div>

                        <div class="col">{{ form_row(addressForm.postal) }}</div>

                        <div class="col">{{ form_row(addressForm.city) }}</div>

                        <div class="col">{{ form_row(addressForm.country) }}</div>

                        <div class="col">{{ form_row(addressForm.phone) }}</div>

                    </div>

                {{ form_end(addressForm) }}

            </div>

        </div>


    </div>


{% endblock %}